# Production Environment Variables
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
PORT=5000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database Configuration
DATABASE_URL=sqlite:///instance/smart_lights.db

# AI Model Configuration
AI_MODEL_PATH=occupancy_model.pkl

# Weather API Configuration
# Get your free API key from: https://openweathermap.org/api
# For more accurate weather, use coordinates instead of city name
WEATHER_API_KEY=your-openweathermap-api-key
WEATHER_CITY=New York
# Optional: Use coordinates for more accurate location-based weather
# Get coordinates from: https://www.latlong.net/
WEATHER_LAT=40.7128
WEATHER_LON=-74.0060

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Performance Configuration
WORKERS=4
TIMEOUT=30

# Datadog Configuration (Optional - for monitoring and observability)
# Get your API key from: https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY=your-datadog-api-key-here
DD_SERVICE=ai-smart-lights
DD_ENV=production
DD_VERSION=1.1.0
DD_LOGS_INJECTION=true
DD_TRACE_ENABLED=true
DD_PROFILING_ENABLED=false 